{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/skills/web_research.inputs.schema.json",
  "title": "WebResearchInputs",
  "type": "object",
  "properties": {
    "query": {"type": "string"},
    "urls": {"type": "array", "items": {"type": "string"}},
    "mode": {"type": "string", "enum": ["candidates", "deep"]},
    "max_rounds": {"type": "integer", "minimum": 1},
    "max_sources_total": {"type": "integer", "minimum": 1},
    "max_pages_fetch": {"type": "integer", "minimum": 1},
    "depth": {"type": "string", "enum": ["brief", "normal", "deep"]},
    "style_hint": {"type": "string"}
  },
  "required": [],
  "additionalProperties": false
}

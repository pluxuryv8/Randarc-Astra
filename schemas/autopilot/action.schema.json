{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/autopilot/action.schema.json",
  "title": "AutopilotAction",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "move_mouse",
        "click",
        "double_click",
        "drag",
        "type",
        "key",
        "scroll",
        "wait"
      ]
    },
    "x": {"type": "integer"},
    "y": {"type": "integer"},
    "button": {"type": "string", "enum": ["left", "right", "middle"]},
    "start_x": {"type": "integer"},
    "start_y": {"type": "integer"},
    "end_x": {"type": "integer"},
    "end_y": {"type": "integer"},
    "text": {"type": "string"},
    "keys": {"type": "array", "items": {"type": "string"}},
    "dy": {"type": "integer"},
    "ms": {"type": "integer", "minimum": 0}
  },
  "required": ["type"],
  "additionalProperties": false
}
